<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="assets/admfti.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <title>Berita</title>
  </head>
  <body class="news">
    <%- include('../komponen/sidebar');%>
    <section class="berita">
      <div class="header">
        <div class="text">Informasi</div>
        <div class="notification-icon">
          <i class="bx bx-bell"></i>
        </div>
      </div>
      <div class="informasi">
        <div class="table">
          <div class="button-container">
            <a href="tambahNews" class="add-button-link">
              <button class="add-button">
                <i class="bx bx-plus"></i>Tambah
              </button></a
            >
          </div>
          <table>
            <thead>
              <tr>
                <th>No.</th>
                <th>Judul</th>
                <th>Gambar</th>
                <th>Kategori</th>
                <th>Tanggal Pengajuan</th>
                <th>Penulis</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% beritas.forEach((berita, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= berita.judul %></td>
                <td>
                  <img
                    style="width: 100px; height: 100px"
                    src="/<%= berita.userId %>/<%= berita.gambar %>"
                  />
                </td>
                <td><%= berita.Kategori.namaKategori %></td>
                <td><%= formatDate(berita.tanggalPengajuan) %></td>
                <td><%= berita.penulis %></td>
                <td>
                  <% if (berita.status === "Y") { %> Disetujui <% } else if
                  (berita.status === "P") { %> Pending <% } else if
                  (berita.status === "N") { %> Ditolak <% } %>
                </td>
                <td>
                  <div class="action-buttons">
                    <a
                      href="/editNews/<%= berita.idNews %>"
                      class="action-button-edit"
                      >Edit</a
                    >
                    <form
                      action="/deletenews/<%= berita.idNews %>/delete"
                      method="post"
                    >
                      <button class="action-button-hapus" type="submit">
                        Hapus
                      </button>
                    </form>
                    <% if (berita.status === "P") { %>
                    <form action="/acc/<%= berita.idNews %>" method="post">
                      <button class="action-button-acc" type="submit">
                        Setuju
                      </button>
                    </form>
                    <form action="/tolak/<%= berita.idNews %>" method="post">
                      <button class="action-button-tolak" type="submit">
                        Tolak
                      </button>
                    </form>
                    <% } %>
                    <a href="detailNews" class="action-button-detail">Detail</a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
    <div id="notification-container" class="notification-container"></div>
    <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
    <script src="/js/notifFti.js"></script>
  </body>
</html>
